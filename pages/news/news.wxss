/* pages/news/news.wxss */
.news-wrap{
  padding:  0 24rpx;
}
.news-img{
  width: 702rpx;
  height: 308rpx;
}
.select-view{
  width: 680rpx;
height: 70rpx;
border: 3rpx solid #4692C4;
border-radius: 15rpx;
margin: 30rpx auto;
font-size: 30rpx;
color: #4692C4;
line-height: 70rpx;
text-align: center;
}
.select-img{
  width:14rpx;
  height:24rpx;
}
.news-list{
  width:700rpx;
  height: 185rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #F2F2F2;
  display: flex;
}
.news-left{
flex:1;
}
.news-right{
  width:224rpx;
  height: 185rpx;
}
.news-list-img{
  width: 224rpx;
height: 150rpx;
margin-top:17rpx;
}
.news-list-text{
  font-size: 30rpx;
  line-height: 42rpx;
  padding: 20rpx 0;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.news-list-time{
  font-size: 26rpx;
  color: #A4A4A4;
}